@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Aiwins.Docs
@using Aiwins.Docs.Localization
@using Aiwins.Docs.Pages.Documents
@inject IHtmlLocalizer<DocsResource> L
@model IndexModel
@{
}
@section styles {
    <rocket-style-bundle name="@typeof(IndexModel).FullName">
        <rocket-style src="/Pages/Documents/Shared/Styles/vs.css" />
    </rocket-style-bundle>
}
<div class="p-5">

    @if (Model.Projects == null || !Model.Projects.Any())
    {
        <div class="alert alert-secondary text-center" role="alert">
            @L["NoProjectWarning"]
        </div>
    }
    else
    {
        <h1>@L["Projects"]</h1>
        <p>
            <ul style="list-style-type: upper-roman;">
                @foreach (var project in Model.Projects)
                {
                    <li>
                        <h3>
                            <a href="@(Model.DocumentsUrlPrefix + project.ShortName)">
                                @project.Name
                            </a>
                        </h3>
                    </li>
                }
            </ul>
        </p>
    }

</div>
