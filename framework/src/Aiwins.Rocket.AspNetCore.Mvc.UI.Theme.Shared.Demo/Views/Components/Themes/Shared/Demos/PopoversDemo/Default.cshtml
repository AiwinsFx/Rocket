@using Aiwins.Rocket.AspNetCore.Mvc.UI.Theme.Shared.Demo.Views.Components.Themes.Shared.Demos.PopoversDemo

<rocket-component-demo-section title="Example" view-path="@PopoversDemoViewComponent.ViewPath">
    <rocket-button button-type="Outline_Secondary" rocket-popover="Hi, i'm popover content!">
        Popover Default
    </rocket-button>
    <rocket-button button-type="Outline_Secondary" rocket-popover-top="Hi, i'm popover content!" title="Popover Title">
        Popover With Title
    </rocket-button>
    <rocket-button button-type="Outline_Secondary" rocket-popover-right="Hi, i'm popover content!" title="Popover Title" dismissible="true">
        Dismissible Popover
    </rocket-button>
    <rocket-button button-type="Outline_Danger" rocket-popover-left="Hi, i'm popover content!" title="Popover Title" disabled="true">
        Disabled Popover
    </rocket-button>
</rocket-component-demo-section>
