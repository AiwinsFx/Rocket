<rocket-component-demo-section title="Mix and match" view-path="@GridsDemoViewComponent.ViewPath">
    <!-- Stack the columns on mobile by making one full-width and the other half-width -->
    <rocket-row>
        <rocket-column size="_12" size-md="_8">.col-12 .col-md-8</rocket-column>
        <rocket-column size="_6" size-md="_4">.col-6 .col-md-4</rocket-column>
    </rocket-row>

    <!-- Columns start at 50% wide on mobile and bump up to 33.3% wide on desktop -->
    <rocket-row>
        <rocket-column size="_6" size-md="_4">.col-6 .col-md-4</rocket-column>
        <rocket-column size="_6" size-md="_4">.col-6 .col-md-4</rocket-column>
        <rocket-column size="_6" size-md="_4">.col-6 .col-md-4</rocket-column>
    </rocket-row>

    <!-- Columns are always 50% wide, on mobile and desktop -->
    <rocket-row>
        <rocket-column size="_6">.col-6</rocket-column>
        <rocket-column size="_6">.col-6</rocket-column>
    </rocket-row>
</rocket-component-demo-section>

