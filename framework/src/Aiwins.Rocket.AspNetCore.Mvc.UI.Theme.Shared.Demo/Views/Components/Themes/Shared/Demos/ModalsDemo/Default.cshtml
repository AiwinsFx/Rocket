@using Aiwins.Rocket.AspNetCore.Mvc.UI.Theme.Shared.Demo.Views.Components.Themes.Shared.Demos.ModalsDemo
@using Aiwins.Rocket.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal

<rocket-component-demo-section title="Example" view-path="@ModalsDemoViewComponent.ViewPath">

    <rocket-button button-type="Primary" data-toggle="modal" data-target="#myModal">Launch modal</rocket-button>

    <rocket-modal centered="true" size="Large" id="myModal">
        <rocket-modal-header title="Modal title"></rocket-modal-header>
        <rocket-modal-body>
            Woohoo, you're reading this text in a modal!
        </rocket-modal-body>
        <rocket-modal-footer buttons="@(RocketModalButtons.Save|RocketModalButtons.Close)"></rocket-modal-footer>
    </rocket-modal>
</rocket-component-demo-section>
